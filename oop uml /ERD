@startuml

class Пользователь {
  - id: int
  + имя: string
  + email: string
}

class Рейс {
  - номерРейса: string
  - отправление: DateTime
  - прибытие: DateTime
  - аэропортОтправления: Аэропорт
  - аэропортПрибытия: Аэропорт
  + доступенДляБронирования(): bool
}

class Аэропорт {
  - кодIATA: string
  - название: string /0-
  - город: Город
}

class Город {
  - название: string
  - страна: Страна
}

class Страна {
  - название: string
}

class Бронирование {
  - id: int
  - рейс
  - пользователь
  - статусБронирования
  + отменитьБронирование(): void
}


class Платеж {
  - id: int
  - сумма: float
  - методОплаты
  - статусПлатежа
}


Пользователь --> Бронирование 
Бронирование --> Рейс : связан с
Рейс --> Аэропорт : отправляется из
Рейс --> Аэропорт : прибывает в
Аэропорт --> Город : расположен в
Город --> Страна : находится в
Бронирование --> Платеж : требует оплаты


@enduml
