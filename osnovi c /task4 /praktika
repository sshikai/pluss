#include <iostream>
#include <fstream>
#include <string>

using namespace std;

int main() {
    setlocale(LC_ALL, "ru");
        string FileName;
        cout << "Введите имя файла: ";
        cin >> FileName;

        ofstream f("FileName.txt");
        string line;
        getline(std::cin, line);
        for (int i = 0; i < 5; ++i) {
           cout << "Введите строку " << i+1 << ": " << '\n';
            getline(std::cin, line); 

            f << line << '\n';

        }

        f.close();
        std::cout << "Запись в файл успешно завершена." << '\n';

        return 0;
}
